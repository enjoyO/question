<van-search value="{{ searchVal }}" placeholder="请输入关键词" 
  id="searchText"
  label="{{label}}"
  use-action-slot
  bind:search="onCofirmSearch"
  
  background="#ffffff"
><view slot="action" bind:tap="actionSearch">搜索</view>
</van-search>


<van-tabs   active="{{ active }}" 
bind:change="onChange">
<view wx:for="{{categoryList}}" 
  wx:for-item="item" wx:key="index">
  <van-tab title="{{item.title}}" ></van-tab>
</view>
</van-tabs>

<view wx:for="{{ poetryList }}" wx:for-item="listItem" wx:key="index">
        <view class="itemParent" wx:for="{{listItem}}" wx:for-item="item" wx:for-index="itemIndex" wx:key="itemIndex" >
            <view class="item index "  >
            {{  index * size +  itemIndex+1 }} </view>
            
            <view class="item ">
                {{  item.title }} 
                <view wx:if="{{index==2}}" class="">・{{  item.first }}</view>
                <view class="time">  {{  item.dynasty }}・{{  item.author }}  </view>
            </view>
        
           
            
            <view class="clear"></view>
        </view>

    </view>