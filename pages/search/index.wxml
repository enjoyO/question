<van-search value="{{ searchVal }}" placeholder="请输入搜索关键词" 
  id="searchText"
  label="{{label}}"
  use-action-slot
  bind:search="onCofirmSearch"
  
  background="#ffffff"
><view slot="action" bind:tap="actionSearch">搜索</view>
</van-search>

<view class="container" wx:if="{{type==1}}">
<view wx:if="{{questionList.length == 0}}">
  <view class="history-search-top" >
    <text>历史搜索</text>
    <image bindtap="clearSearchContent" src="/static/images/remove.png" mode="aspectFill"/>
  </view>
  <view class="history-search"  >
    <text bindtap="onTapHistory" data-val="{{item}}" wx:for="{{historys}}"
        wx:key="index"
    >{{item}}</text>
  </view>
  <view class="empty-view"   >
    <image class="empty" src="/static/images/empty.png" mode="aspectFill"/>
  </view>
</view>
<view wx:else >
  <view class="totalSize"> 以为您搜索到<label class="redColor">{{ totalSize }}</label>个结果</view>
  <view wx:for="{{ questionList }}" wx:for-item="listItem" wx:key="index">
        <view class="itemParent" bindtap="goQuestion" wx:for="{{listItem}}" data-id="{{ item.id }}" wx:for-item="item" wx:for-index="itemIndex" wx:key="itemIndex" >
           
           
            <view class="item remark">
              {{  index * size +  itemIndex+1 }}   {{  item.question }}     
            </view> 
            <view class="clear"></view>
        </view>
    </view>

</view>
</view>